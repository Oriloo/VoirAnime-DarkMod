{
  "manifest_version": 3,
  "name": "VoirAnime - DarkMod : streaming animes",
  "description": "Th√®me sombre et plus encore, pour l'ensemble du site \"voiranime.com\" (VA).",
  "version": "3.0.0",
  "author": "Orilo",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "scripting"
  ],
  "host_permissions": [
    "*://*.voiranime.com/*"
  ],
  "web_accessible_resources": [
    {
      "resources": ["styles/all.css"],
      "matches": ["*://*.voiranime.com/*"]
    }
  ],
  "content_scripts": [
    {
      "matches": ["*://*.voiranime.com/*"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "content_security_policy": {
    "extension_pages": "default-src 'self'; style-src 'self';"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "voiranime-darkmod@orilo",
      "strict_min_version": "109.0"
    }
  }
}
